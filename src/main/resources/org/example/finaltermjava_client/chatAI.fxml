<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<AnchorPane prefHeight="467.0" prefWidth="845.0" xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.finaltermjava_client.controller.ChatAIController">
    <VBox prefHeight="467.0" prefWidth="845.0">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
        <VBox prefHeight="466.0" prefWidth="825.0">
            <ScrollPane prefHeight="426.0" prefWidth="845.0" fx:id="scrollPane">
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="200.0" prefWidth="200.0"/>
            </ScrollPane>
        </VBox>
        <HBox prefHeight="100.0" prefWidth="200.0">
            <TextField prefHeight="60.0" prefWidth="734.0" fx:id="inputField" promptText="Type your message here..."/>
            <Button mnemonicParsing="false" prefHeight="46.0" prefWidth="91.0" text="Send"
                    onAction="#handleSendButtonAction" fx:id="sendButton"/>
        </HBox>
    </VBox>
</AnchorPane>
